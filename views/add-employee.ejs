<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" type="text/css">
<link rel="stylesheet" href="/css/employees.css" type="text/css">
  </head>
  <body>
<%- include('includes/navigation.ejs') %>

    <main>
        <form class="employee-form" action="/add-employee" method="POST">
            <div class="form-control">
                <label for="title">Name</label>
                <input type="text" name="name" id="name">
            </div>

            <div class="form-control">
                <label for="title">Surname</label>
                <input type="text" name="surname" id="surname">
            </div>

            <div class="form-control">
                <label for="title">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl">
            </div>

            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"></textarea>
            </div>

            <div class="form-control">
                <label for="salary">Salary</label>
                <input type="number" name="salary" id="salary" step="0.01">
            </div>

            <button class="btn" type="submit">Add Employee</button>
        </form>
    </main>

<%- include('includes/end.ejs') %>
